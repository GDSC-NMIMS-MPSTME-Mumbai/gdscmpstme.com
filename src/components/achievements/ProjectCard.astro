---
export type Props = Project;

const { name, description, link, imgUrl, contributors } = Astro.props;
---

<article>
  <div
    class="flex flex-col h-full w-72 rounded-3xl border-[3px] border-gdsc-yellow-light bg-white p-5"
  >
    <a
      href={link}
      class="self-end rounded-2xl bg-gdsc-yellow px-3 py-1 text-[13px] font-medium text-white"
      >ðŸ’» Learn More</a
    >
    <img
      class="mt-4 w-[115px] self-center rounded-full"
      src={imgUrl}
      alt={`${name} logo`}
      width="115px"
    />
    <h3 class="mt-6 text-center text-xl font-bold">
      {name}
    </h3>
    <p class="mt-3 text-center text-gray-700">
      {description}
    </p>
    <div class="mt-5 flex gap-2 flex-wrap justify-center text-center">
      {
        contributors.map(contributor => {
          return (
            <a
              href={contributor.link}
              target="_blank"
              class="rounded-full bg-gray-200 px-3 py-1 text-[13px] font-semibold text-gray-800"
            >
              {contributor.name}
            </a>
          );
        })
      }
    </div>
  </div>
</article>
