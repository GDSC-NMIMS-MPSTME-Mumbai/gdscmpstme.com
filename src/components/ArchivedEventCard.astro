---
const {title,descr,imgsrc,date} = Astro.props;
// const date1 = date.slice(8,10)
const date1 = new Date(date);
const date_month = date1.toDateString().slice(4,10);
const date_year = date1.toDateString().slice(11,);
---

<div class="flex flex-col border-2 border-yellow-400 bg-white p-8 mr-10">
    <div class="text-center w-44">
        <p class="text-sm ml-auto w-1/2 mb-6 p-1 rounded-md bg-yellow-500">
            {date_month+", "+date_year}
        </p>
        <img class="mx-auto mb-6" src={imgsrc} alt="">
        <p class="text-lg font-bold mb-4">
            {title}
        </p>
        <p class="">
            {descr}
        </p>
    </div>
</div>

